<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/btn4"
        android:textSize="40sp"
        android:text="Data Query" />


    <EditText
        android:id="@+id/dataId_for_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:ems="10"
        android:inputType="text"
        android:hint="Data ID" />

    <Button
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="SEARCH"
        android:backgroundTint="@color/btn4"/>

    <Button
        android:id="@+id/find_all_user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="FIND ALL USERS"
        android:backgroundTint="@color/btn2"/>

    <Button
        android:id="@+id/find_all_book_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="FIND ALL BOOKS"
        android:backgroundTint="@color/btn1"/>

    <TextView
        android:id="@+id/data_query_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="sult"/>
</LinearLayout>